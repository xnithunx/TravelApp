<div class="container">
<%= form_with scope: :plan, url: user_plans_path, local: true do |form| %>
	<p>
			<%= form.label :title%><br>
			<%= form.text_field :title %>
		</p>

		<p>
			<%= form.label :address , 'Location'%><br>
			<%= form.text_field :address %>
		</p>


		<p>
			<%= form.label :description%><br>
			<%= form.text_field :description %>
		</p>

		<p>
			<%= form.label :activities %><br>
			<%= form.text_field :activities %>
		</p>

		<p>
			<%= form.label :image_url, "Upload Image" %><br>
			<%= form.file_field :image_url %>
		</p>

		<p>
			<%= form.submit 'Update Plan' %>
		</p>


<% end %>

</div>